<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    tools:background="@color/design_default_color_primary">
    <TextView
        android:id="@+id/numText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_gravity="bottom|left"
        android:text="燃烧你的卡路里！！！"
        android:textSize="30dp"
        android:textColor="#f00"/>
    <cn.jzvd.JzvdStd
        android:id="@+id/videoplayer"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <cn.jzvd.JzvdStd
        android:id="@+id/videoplayer1"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <cn.jzvd.JzvdStd
        android:id="@+id/videoplayer2"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_third" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="118dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dip_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="(user's name)"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dip_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(user's emaill address)"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

